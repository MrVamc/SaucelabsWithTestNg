				name="com.newframework.saucelabs.logintestcases.invalidLogin" />
			<class
				name="com.newframework.saucelabs.logintestcases.loginwithEmptyFields" />
			<class
				name="com.newframework.saucelabs.logintestcases.loginwithOnlyUsername" />
			<class
				name="com.newframework.saucelabs.logintestcases.loginwithOnlyPwd" />

			<!-- Inventory Test Cases -->
			<class
				name="com.newframework.saucelabs.inventoryTestcases.productListCount" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.productDetails" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.productListCount" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.productDetails" />
