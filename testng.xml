				name="com.newframework.saucelabs.inventoryTestcases.sortAtoZ" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.sortZtoA" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.addtoCart" />
			<class
				name="com.newframework.saucelabs.inventoryTestcases.addMultipleProducts" />
